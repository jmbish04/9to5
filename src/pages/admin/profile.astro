---
import AdminLayout from '../../layouts/AdminLayout.astro';
import Card from '../../components/ui/card.astro';
import CardHeader from '../../components/ui/card-header.astro';
import CardTitle from '../../components/ui/card-title.astro';
import CardContent from '../../components/ui/card-content.astro';
import Button from '../../components/ui/button.astro';
---
<AdminLayout>
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">User Profile & Onboarding</h1>
    <p class="mt-1 text-sm text-gray-600">Configure your career profile for personalized AI recommendations</p>
  </div>

  <!-- Onboarding Progress -->
  <Card class="mb-6">
    <CardHeader>
      <CardTitle>Onboarding Progress</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white text-sm font-medium">
              âœ“
            </div>
            <div>
              <div class="font-medium">Basic Information</div>
              <div class="text-sm text-gray-500">Personal details and contact information</div>
            </div>
          </div>
          <span class="text-green-600 text-sm font-medium">Complete</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-medium">
              2
            </div>
            <div>
              <div class="font-medium">Career Preferences</div>
              <div class="text-sm text-gray-500">Job preferences and career goals</div>
            </div>
          </div>
          <span class="text-blue-600 text-sm font-medium">In Progress</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center text-white text-sm font-medium">
              3
            </div>
            <div>
              <div class="font-medium">Skills Assessment</div>
              <div class="text-sm text-gray-500">Technical and soft skills evaluation</div>
            </div>
          </div>
          <span class="text-gray-500 text-sm font-medium">Pending</span>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center text-white text-sm font-medium">
              4
            </div>
            <div>
              <div class="font-medium">AI Personalization</div>
              <div class="text-sm text-gray-500">Configure AI agents for your needs</div>
            </div>
          </div>
          <span class="text-gray-500 text-sm font-medium">Pending</span>
        </div>
      </div>
    </CardContent>
  </Card>

  <!-- Current Profile -->
  <Card class="mb-6">
    <CardHeader>
      <CardTitle>Current Profile</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="font-medium text-gray-900 mb-3">Basic Information</h4>
          <div class="space-y-2 text-sm">
            <div><span class="font-medium">Name:</span> John Smith</div>
            <div><span class="font-medium">Email:</span> john.smith@example.com</div>
            <div><span class="font-medium">Location:</span> San Francisco, CA</div>
            <div><span class="font-medium">Experience:</span> 5 years</div>
          </div>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-3">Career Preferences</h4>
          <div class="space-y-2 text-sm">
            <div><span class="font-medium">Role:</span> Senior Frontend Developer</div>
            <div><span class="font-medium">Remote:</span> Preferred</div>
            <div><span class="font-medium">Salary Range:</span> $120k - $150k</div>
            <div><span class="font-medium">Company Size:</span> Startup to Mid-size</div>
          </div>
        </div>
      </div>
      
      <div class="mt-6">
        <h4 class="font-medium text-gray-900 mb-3">Skills</h4>
        <div class="flex flex-wrap gap-2">
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            React
          </span>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            TypeScript
          </span>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            JavaScript
          </span>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            Node.js
          </span>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            + Add Skill
          </span>
        </div>
      </div>
      
      <div class="mt-6 flex gap-3">
        <Button>Update Profile</Button>
        <Button variant="outline">Career Assessment</Button>
      </div>
    </CardContent>
  </Card>

  <!-- AI Personalization Settings -->
  <Card class="mb-6">
    <CardHeader>
      <CardTitle>AI Agent Preferences</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="font-medium">Job Discovery Agent</h5>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked>
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
              </label>
            </div>
            <p class="text-sm text-gray-600">Personalized job recommendations and semantic search</p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="font-medium">Career Coach Agent</h5>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked>
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
              </label>
            </div>
            <p class="text-sm text-gray-600">Career guidance and skill development recommendations</p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="font-medium">Content Generation Agent</h5>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
              </label>
            </div>
            <p class="text-sm text-gray-600">AI-generated cover letters and resume optimization</p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="font-medium">Market Intelligence Agent</h5>
              <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" class="sr-only peer" checked>
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
              </label>
            </div>
            <p class="text-sm text-gray-600">Salary insights and market trend analysis</p>
          </div>
        </div>
        
        <div class="pt-4 border-t border-gray-200">
          <h5 class="font-medium mb-3">Notification Preferences</h5>
          <div class="space-y-2">
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" checked>
              <span class="ml-2 text-sm">Daily job recommendations</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" checked>
              <span class="ml-2 text-sm">Weekly market insights</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
              <span class="ml-2 text-sm">Career development tips</span>
            </label>
          </div>
        </div>
        
        <div class="flex gap-3 pt-4">
          <Button>Save Preferences</Button>
          <Button variant="outline">Reset to Defaults</Button>
        </div>
      </div>
    </CardContent>
  </Card>

  <!-- Quick Actions -->
  <Card>
    <CardHeader>
      <CardTitle>Quick Actions</CardTitle>
    </CardHeader>
    <CardContent>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <Button variant="outline" class="h-auto p-4 flex flex-col items-center space-y-2">
          <div class="text-lg">ðŸŽ¯</div>
          <div class="text-center">
            <div class="font-medium">Take Skills Assessment</div>
            <div class="text-sm text-gray-500">Get AI-powered skill recommendations</div>
          </div>
        </Button>
        
        <Button variant="outline" class="h-auto p-4 flex flex-col items-center space-y-2">
          <div class="text-lg">ðŸ“Š</div>
          <div class="text-center">
            <div class="font-medium">View Market Analysis</div>
            <div class="text-sm text-gray-500">See salary trends for your role</div>
          </div>
        </Button>
        
        <Button variant="outline" class="h-auto p-4 flex flex-col items-center space-y-2">
          <div class="text-lg">âœ¨</div>
          <div class="text-center">
            <div class="font-medium">Generate Resume</div>
            <div class="text-sm text-gray-500">AI-optimized resume creation</div>
          </div>
        </Button>
      </div>
    </CardContent>
  </Card>
</AdminLayout>